{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,          
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*",  "i18next-parser.config.ts"],
  "exclude": ["node_modules", "build"]
}
